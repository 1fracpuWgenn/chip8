{
  "name": "chip8js",
  "version": "1.0.3",
  "description": "A Chip-8 emulator written in JavaScript (Node.js and Browser).",
  "author": {
    "name": "Tania Rascia",
    "email": "me@taniarascia.com",
    "url": "https://www.taniarascia.com"
  },
  "main": "index.js",
  "repository": "github:taniarascia/chip8",
  "bugs": "https://github.com/taniarascia/chip8/issues",
  "scripts": {
    "play": "node scripts/play",
    "play:native": "node scripts/native",
    "hexdump": "node scripts/hexdump",
    "example:terminal": "node scripts/play roms/CONNECT4",
    "example:native": "node scripts/native roms/PONG",
    "test": "jest",
    "build:web": "browserify -t brfs scripts/browser.js  > web/bundle.js",
    "watch": "nodemon --ignore 'web/*' --exec npm run web",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "coveralls": "^3.0.5",
    "jest": "^24.9.0"
  },
  "keywords": [
    "chip8",
    "chip8-emulator",
    "node",
    "javascript"
  ],
  "jest": {
    "collectCoverageFrom": [
      "data/*.js",
      "classes/*.js",
      "classes/interfaces/*.js",
      "!data/keyMap.js",
      "!/node_modules/",
      "!classes/interfaces/DOMCpuInterface.js",
      "!classes/interfaces/TerminalCpuInterface.js"
    ]
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "blessed": "^0.1.81",
    "brfs": "^2.0.2",
    "browserify": "^16.2.3",
    "nodemon": "^1.19.0",
    "raylib": "^0.2.0"
  }
}
